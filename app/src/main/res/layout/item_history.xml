<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rectangle"
    android:gravity="center"
    android:layout_margin="@dimen/padding_margin">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="@dimen/list_item_height"
        android:layout_height="@dimen/list_item_height"
        android:layout_margin="@dimen/one"
        android:background="@drawable/rectangle_white"
        android:elevation="@dimen/activity_horizontal_margin"
        android:fitsSystemWindows="true"
        android:scaleType="fitXY"
        android:src="@drawable/apple"
        />

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Yet to Answer"
        android:drawableEnd="@drawable/ic_action_circle_arrow"
        android:drawableRight="@drawable/ic_action_circle_arrow"
        android:paddingEnd="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:gravity="center"
        android:textSize="@dimen/default_text"
        android:textColor="@android:color/black"
        />>

</LinearLayout>